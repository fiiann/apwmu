<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin"
    tools:context="com.mcn.apwmu.CariWisudaActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/mainActivity"
        android:layout_marginEnd="@dimen/mainActivity"
        android:textColorHint="@color/colorBlack">

        <AutoCompleteTextView
            android:id="@+id/nim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fakultas"
            android:text="24010314120005"
            android:textSize="14dp"
            android:inputType="number"
            android:shadowColor="@color/colorBlack"
            android:textColorLink="@color/colorBlack"
            android:textColorHint="@color/colorBlack"
            android:textColorHighlight="@color/colorBlack"
            android:textColor="@color/colorBlack"
            android:maxLines="1" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:background="@drawable/cari_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/btn_cari_wisudawan_c"
        android:onClick="cariWisudawan"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:text="CARI"
        android:src="@drawable/icon_pencarian"/>
</LinearLayout>
